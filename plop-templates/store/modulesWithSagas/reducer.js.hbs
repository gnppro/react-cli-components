import {
  {{constantCase name}}_REQUEST,
  {{constantCase name}}_SUCCESS,
  {{constantCase name}}_FAILURE,
  {{constantCase name}}_ERROR_CLEANUP,
  {{constantCase name}}_RESET,
} from './types';

const initialState = {
  data: [],
  error: null,
  status: 'idle',
  statusText: '',
  statusCode: null,
};

export default function (state = initialState, action) {
  switch (action.type) {
    case {{constantCase name}}_REQUEST:
      return {
        ...state,
        status: 'loading',
      };
    case {{constantCase name}}_SUCCESS:
      return {
        ...state,
        status: 'success',
        data: action.payload.data,
        statusCode: action.payload.status,
      };
    case {{constantCase name}}_FAILURE:
      return {
        ...state,
        status: 'failure',
        error: action.payload,
        statusText: action.payload.statusText,
        statusCode: action.payload.status,
      };
    case {{constantCase name}}_ERROR_CLEANUP:
      return {
        ...state,
        error: null,
        statusText: '',
        statusCode: null,
      };
    case {{constantCase name}}_RESET:
      return initialState;
    default:
      return state;
  }
}
